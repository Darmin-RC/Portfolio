---
interface Props {
  title?: String;
}

const { title = "Darmin RC" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="icon.png" type="image/x-icon" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <script
      src="https://kit.fontawesome.com/93763aacce.js"
      crossorigin="anonymous"></script>
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Nunito&family=Nunito+Sans:opsz,wght@6..12,500&display=swap");

  :root {
    --white: #e7e7e7;
    --black: #10111a;
    --dark: #2c293ad0;
    --green: #30b497;
    --aqua: #4cae97;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    background: var(--black);
    background: url("/fondo.jpg");
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    max-width: 100%;
    color: var(--white);
    font-family: "Nunito";
    overflow-x: hidden;
    min-height: 100vh;
  }

  a {
    text-decoration: none;
    color: var(--white);
    font-size: 1.3em;
    text-shadow: 1px 2px 5px #000;
    transition: 0.5s;
  }

  a:hover {
    color: var(--green);
  }

  button {
    background: none;
    border: none;
    cursor: pointer;
    transition: 0.5s;
  }

  h1 {
    text-shadow: 1px 2px 5px #000;
  }

  span {
    color: var(--green);
  }

  input,
  textarea {
    background: none;
    border: none;
    outline: none;
    width: 100%;
    background: var(--black);
    border-radius: 0.5em;
    padding: 0.5em 1em;
    margin: 0.5em 0;
    font-size: 1em;
    color: var(--white);
    box-shadow: 2px 4px 10px #000;
  }

  textarea {
    resize: none;
    font-family: "Nunito";
  }
</style>
